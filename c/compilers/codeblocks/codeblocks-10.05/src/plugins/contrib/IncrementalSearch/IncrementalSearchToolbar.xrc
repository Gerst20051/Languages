    <object class="wxTextCtrl" name="idIncSearchText">
	  <size>160,-1</size>
	  <style>wxTE_PROCESS_ENTER|wxTE_NOHIDESEL</style>
    </object>
    <object class="separator"/>
    <object class="tool" name="idIncSearchPrev">
      <tooltip>Prev</tooltip>
      <longhelp>Jump to previous occurrence</longhelp>
      <bitmap>images/incsearchprev.png</bitmap>
    </object>
    <object class="tool" name="idIncSearchNext">
      <tooltip>Next</tooltip>
      <longhelp>Jump to next occurrence</longhelp>
      <bitmap>images/incsearchnext.png</bitmap>
    </object>
    <object class="tool" name="idIncSearchHighlight">
      <tooltip>Highlight</tooltip>
      <longhelp>Highlight all occurrences</longhelp>
      <bitmap>images/incsearchhighlight.png</bitmap>
      <toggle>1</toggle>
    </object>
    <object class="tool" name="idIncSearchSelectOnly">
      <tooltip>Selected text</tooltip>
      <longhelp>Search only inside selected text</longhelp>
      <bitmap>images/incsearchselectedonly.png</bitmap>
      <toggle>1</toggle>
    </object>
    <object class="tool" name="idIncSearchMatchCase">
      <tooltip>Match case</tooltip>
      <longhelp>Only show phrases that match the case</longhelp>
      <bitmap>images/incsearchcase.png</bitmap>
      <toggle>1</toggle>
    </object>
    <object class="tool" name="idIncSearchUseRegex">
      <tooltip>Use regex</tooltip>
      <longhelp>Use regular expressions for search</longhelp>
      <bitmap>images/incsearchregex.png</bitmap>
      <toggle>1</toggle>
    </object>
  </object>
</resource>
